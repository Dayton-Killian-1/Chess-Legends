<h1 style="text-align:center">Chess Legends</h1>



<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @games.active.each do |game| %>
    <div class="col">
      <div class="card">
        <div class="cols-2 mb-3 mt-3 mx-auto">
          <%= image_tag (game.whiteteamcolor.titleize + "-W.png") , width: 100 %> 
          <%= image_tag (game.blackteamcolor.titleize + "-B.png") , width: 100 %> 
        </div>
        <div class="card-header">
          <h5 class="card-title"><%= game.whiteteamcolor.titleize %> team VS <%= game.blackteamcolor.titleize %> team</h5>
          <p class="card-text">This game started on <%= game.created_at.strftime("%B %e, %Y") %> </p>
          <a href="/games/<%=game.id%>" class="btn btn-primary"  >Go to game</a>
        </div>
      </div>
    </div>
  <% end %>
</div>







<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Whiteteamcolor</th>
      <th>Blackteamcolor</th>
      <th>Outcome</th>
      <th>Movehistory</th>
      <th>Boardsetup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.status %></td>
        <td><%= game.whiteteamcolor %></td>
        <td><%= game.blackteamcolor %></td>
        <td><%= game.outcome %></td>
        <td><%= game.movehistory %></td>
        <td><%= game.boardsetup %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

