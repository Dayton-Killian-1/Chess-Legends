<p id="notice"><%= notice %></p>

<h1>Pieces</h1>

<table>
  <thead>
    <tr>
      <th>Pieceowner</th>
      <th>Teamcolor</th>
      <th>Piecetype</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.pieceowner_id %></td>
        <td><%= piece.teamcolor %></td>
        <td><%= piece.piecetype %></td>
        <td><%= piece.points %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
